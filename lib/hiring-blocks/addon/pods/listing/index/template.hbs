<section class="home-banner mb-md-5">
  <div class="left white">
    <h1 class="semi-bold">WE HAVE JOBS</h1>
    <h2 class="semi-bold mb-5">
      Get recruited by top multinational companies and get worldwide recognition
    </h2>
  </div>

  <img class="dsp-none-sm" src="/images/home_main.jpg" alt="codingblocks-jobs-home-banner">
</section>

<div class="bg-gradient-violet-lr mb-5 p-3 d-md-none d-flex justify-content-between">
  <button class="white" {{action "toggleFilterMenu"}}>Apply Filters</button>
  <button class="yellow {{unless showFilters 'display-none'}}" {{action "toggleFilterMenu"}}>Apply</button>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-3 pr-md-5 {{unless showFilters 'dsp-none-sm'}}">

      <JobStatusFilterbox @changeJobFilter={{action "changeJobFilter"}} @value={{eligibilityStatus}} />

      <div class="d-flex justify-content-between align-items-center mb-5 mt-5">
        <span class="font-lg">Filter Jobs</span>
        <button class="red" {{action "reset"}}>Reset all</button>
      </div>

      {{location-filterbox values=locations setLocations=(action "changeLocationsFilter") }}

      <JobtypeFilterbox @values={{jobTypes}} @setJobTypes={{action "changeTypeFilter"}} />
      
