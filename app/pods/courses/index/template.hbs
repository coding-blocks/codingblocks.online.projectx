
<div class="container">
  <h2 class="t-align-c mt-5 mb-5">
    All Courses
  </h2>
  <div class="row justify-content-center">
    {{#each courses as |course|}}
        <div class="c-layout-card col-12 col-md-6 col-lg-3 pr-md-0">
          {{course-card course=course}}
        </div>
    {{/each}}
  </div>
  
  <div class="row justify-content-center">
    {{#if taskMoreCourses.isRunning}}
      <button class="button-dashed">Loading...</button>
    {{else if (lt limit count)}}
      <button class="button-dashed" {{action "loadMore"}}>Load More</button>
    {{/if}}
  </div>
</div>
