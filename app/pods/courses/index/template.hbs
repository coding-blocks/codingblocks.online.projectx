<div class="grid-background">
  <div class="heading">
    <p>All Courses</p>
  </div>
  <div class="grid row">
    {{#each courses as |course|}}
      <div class="card-layout col-md-4 col-sm-6">
        <div class="card o-layout-card ">

          <div class="{{course.difficultyName}}-level"></div>
          <div class="{{course.difficultyName}}-text">{{uppercase course.difficultyName}}</div>

          <div class="card-image o-image-card">
            <img src="{{defaultTo course.logo '/images/c++'}}">
          </div>

          <div class="card-heading o-text-card">
            {{course.title}}
          </div>
          <div class="card-text">
            {{course.subtitle}}
          </div>
          <div class="card-mentor">
            <div class="card-mentor-image">
              {{#each course.instructors as |instructor index|}}
                {{#if (lt index 2) }}
                  <img class="card-mentors" src="{{instructor.photo}}">
                {{/if}}
              {{/each}}
            </div>
            <div class="card-mentor-text">
              <span>Instructors</span>
              <div class="card-mentor-name">
                {{#each course.instructors as |instructor index|}}
                  {{#if (lt index 2)}}
                    {{instructor.name}} {{if (and (gt course.instructors.length 1) (eq index 0)) "," ""}}
                  {{/if}}
                {{/each}}
                
                {{#if (gt course.instructors.length 2)}}
                  <span class="price"> +{{sub course.instructors.length 2}}</span> more
                {{/if}}
              </div>
            </div>
          </div>
          <div class="card-mentor-divider"></div>
          <div class="price-detail row">
            <div class="col-md-6 col-sm-12 col-xs-12">
              <div class="card-price-details">
                <div class="card-batches">
                  {{course.runs.length}} Batches Available
                </div>
                <div class="card-batch-details">
                  Starting from <span class="price">{{moment-format (unix course.topRun
                .start) 'MMM Do YYYY'}}</span>
                </div>
              </div>
            </div>
            <div class="button-parent col-md-6 col-sm-12 col-xs-12">
              <div class="button-solid">
                {{#link-to 'courses.id' course.id tagName="button" activeClass=""}} Rs. {{course
                .topRun.price}}{{/link-to}}
              </div>
            </div>
          </div>

        </div>
      </div>
    {{/each}}
  </div>
</div>
