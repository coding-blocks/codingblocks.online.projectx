{{!-- Render a component based upon payload --}}
{{#if (not currentUser.user.verifiedemail)}}
  {{verify-email}}
{{else if payload}}
  {{component componentName payload=payload onVideoCompleted=(action 'transitonToNextContent') tab=tab run=run start=start showFeedback=(unbound showFeedback) onFeedbackSubmit=(action 'submitFeedback') runAttempt=runAttempt sectionId=sectionId}}
{{else if (not run.isStarted)}}
  {{unstarted-content run=run}}
{{else}}
  {{locked-content course=run.course}}
{{/if}}