<div class="container-fluid c-document">
  <div class="row justify-content-between">
    <div class="col-6 col-md-4 heading">
      {{document.name}}
    </div>
    <div class="col-5 offset-md-4 offset-lg-5 col-md-4 col-lg-3">
      <div class="button-solid button-orange white float-right">
        <a href={{document.pdfLink}} target="_blank">
          <button>
            Download as PDF
          </button>
        </a>
      </div>

    </div>
  </div>
  <div class="row markdown">
    {{#if document.pdfLink}}
      <iframe src="https://docs.google.com/gview?url={{document.pdfLink}}&embedded=true"
              style="width:100%" frameborder="0">
      </iframe>
    {{else}}
      {{markdown-to-html document.markdown extensions='katex'}}
    {{/if}}
  </div>
</div>
