                                </form>
                                <img src="/images/love.svg" alt="" class="love-ico">
                            </div>
                            <div class="feed-box">
                                <div class="feed-text">Feedback Submitted</div>
                                <img src="/images/love.svg" alt="" class="love-ico">
                            </div>
                    </div> --}}
        {{#hls-player src=lecture.videoUrl
            awsData=awsDataTask.lastSuccessful.value
            title=lecture.name
            onVideoCompleted=onVideoCompleted
        }}
        {{/hls-player}}
    </div>
{{/unless}}
