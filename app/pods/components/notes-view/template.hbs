
<div class="notes-list list-shaded spaced invert">
  {{#unless savedNotes.length}}
    <div class="list-item">
      <div class="row justify-content-center">
        You have no notes for this course.
      </div>
    </div>
  {{/unless}}

  {{#liquid-if requestErrored}}
    <div class="list-item">
      <div class="row justify-content-center red">
        There was some error saving this note. Please try again
      </div>
    </div>
  {{/liquid-if}}

  {{#each savedNotes as |note|}}
    {{note-view note=note runAttempt=runAttempt}}
  {{/each}}

  <div class="footer">
    <div class="list-item">
      <div class="row">
        <div class="li-left col-9">
          {{textarea class="invert font-sm" placeholder="Add a Note" value=newNoteText}}
        </div>
        <div class="li-right col-3 align-self-start">
          <div class="button-solid card-md">
            {{!-- <button {{action 'addNote'}} >Save Note</button> --}}
              <button {{action (perform addNoteTask)}} class="{{if submissionTask.isRunning 'disabled'}}">
                {{#if addNoteTask.isRunning }}
                  Saving..
                {{else}}
                  Save
                {{/if}}
              </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
