<div class="c-code-editor">
  <div id="editor">
    {{ember-ace
      value=selectedLanguage.source
      update=(action (mut selectedLanguage.source))
      editorClass="height-100 m-0"
      classNames=classNames
      mode=selectedLanguage.mode
      theme='ace/theme/monokai'
      useSoftTabs=true
      tabSize=2
      highlightActiveLine=true
      enableDefaultAutocompletion=true
      enableLiveAutocompletion=true
    }}
  </div>

  <div id="dragger-ce-rs"></div>
  <!-- code-editor -- result-->

  <div class="options-result">
    <div class="editor-options row no-gutters justify-content-between">
      <div class="row no-gutters">
        <div class="select-list align-self-center pl-3">
          <div class="select-box pointer row justify-content-between" onclick={{action 'openLanguageSelectBox'}}>
            {{selectedLanguage.name}}
            {{#if isLanguageSelectOpen}}
            <span><i class="fas fa-angle-up"></i></span>
            {{else}}
            <span><i class="fas fa-angle-down"></i></span>
            {{/if}}
          </div>
          <div class="open-select-box {{if isLanguageSelectOpen 'display-block'}}">
            <ul>
              {{#each allLanguages as |language|}}
              <li class="pointer" {{action selectLanguage language}}>
                {{language.name}}
              </li>
              {{/each}}
            </ul>
          </div>
        </div>

        <button class="white pl-4" {{action 'toggle' 'testcases'}}><i class="fas fa-arrow-down"></i> Download Testcases</button>
      </div>
      
      <div class="row p-0">
        <button class="red" {{action 'toggle' 'editorial'}}>
          {{#if code.editorial}}
          <i class="fas fa-book-open"></i> View Editorial
          {{else}}
          <i class="fas fa-lock"></i> Unlock Editorial
          {{/if}}
        </button>
        <div class="align-self-center pl-3">
          <div class="button-solid {{if isTaskRunning 'disabled'}}">
            {{#if isTaskRunning}}
            <button disabled>Executing your code</button>
            {{else}}
            <button onclick={{action 'submitCode'}}>Submit Code</button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <div class="result">
      <div class="row no-gutters">
        <div class="input p-3 col-md-6 col-sm-6 col-xs-12">
          <div class="row">
            <div class="heading col-md-6">
              <p>Custom Input</p>
            </div>
            <div class="col-md-6">
              <div class="button-solid {{if isTaskRunning 'disabled'}}">
                {{#if isTaskRunning}}
                  <button disbaled>Running Code</button>
                {{else}}
                  <button onclick={{action 'runCode'}} >Run Code</button>
                {{/if}}
              </div>
            </div>
          </div>
          <div class="row">
            <div class="input-box col-md-12" contenteditable="true" oninput={{action 'changeCustomInput'}}>
            </div>
          </div>
        </div>
        <div class="output p-3 col-md-6 col-sm-6 col-xs-12">
          <div class="row">
            <div class="heading col-12">
              <p>
                Output : &nbsp;
                <span>
                  {{#if isRunOutput}}
                      {{runCodeTask.last.value.result}}
                  {{/if}}
                </span>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="input-box col-md-12">
              {{#if isRunOutput}}
                {{#if runCodeTask.last.value.error}}
                  <pre>{{base64 'decode' runCodeTask.last.value.error}}</pre>
                {{else if runCodeTask.last.value.data}}
                  <pre>{{base64 'decode' runCodeTask.last.value.data.output}}</pre>
                {{/if}}
              {{else}}
                {{#if submitCodeTask.last.value.error}}
                  <pre>{{base64 'decode' submitCodeTask.last.value.error}}</pre>
                {{else if submitCodeTask.last.value.data}}
                  <code>
                    {{#each submitCodeTask.last.value.data.testcases as |testcase index|}}
                      TESTCASE #{{inc index}}: {{testcase.result}} (Time: {{testcase.runtime}} s) <br>
                    {{/each}}
                  </code>
                {{/if}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
