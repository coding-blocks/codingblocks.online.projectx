<div class="heading t-align-c mb-5">
  Recommended Courses
</div>
<div class="row justify-content-center pt-md-5 m-0">
  {{#if fetchRecommendedCoursesTask.isRunning}}
  {{!-- here we can show blank cards to indicate loading --}}
  <LoadingCard class="w-100"/>
  {{else}}
  <CardGrid class="row justify-content-center" as |card|>
    {{#each recommendedCourses as |course index|}}
    <div class="c-layout-card col-12 col-md-6 col-lg-3 pr-md-0">
      {{course-card course=course index=index showPopUp=(eq index card.poppedIndex) onChangePopped=card.changePoppedCard}}
    </div>
    {{/each}}
  </CardGrid>
  {{/if}}
</div>
