<div class="c-buy-top slide-up row no-gutters justify-content-between">
  <div class="col-6 align-self-center">
    <div class="row no-gutters">
      <div class="card-image col-sm-2">
        <img src="{{course.logo}}" alt="course image">
      </div>
      <div class="heading-d col-10 align-self-center">
        <div class="main-h">
          {{course.title}}
        </div>
        <div class="sub-h">
          Mentor :
          {{#each course.instructors as |instructor index|}}
             {{instructor.name}}{{if (lt index (sub course.instructors.length 1)) ", " " "}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="col-6 align-self-center">
    <div class="row justify-content-end">
      <div class="button-dashed col-6">
        {{#if session.isAuthenticated}}
            {{#link-to "classroom.timeline.index" course.id course.topRun.id tagName="button"}}
                START FREE TRIAL
            {{/link-to}}
        {{else}}
            <button onclick={{action 'logIn'}}>
                START FREE TRIAL
            </button>
        {{/if}}
      </div>
      <div class="button-solid col-6">
          <a href="#runs">
              <button class="white">BUY NOW</button>
          </a>
      </div>
    </div>
  </div>
</div>

{{!-- Summary Section --}}
<div class="c-summary">
  <div class="classroom-container row">
    <div class="classroom-header-box col-md-8 col-sm-12 col-xs-12">
      <div class="classroom-header row">
        <div class="classroom-image col-md-2 col-xs-2 col-sm-2">
          <img src="{{course.logo}}" alt="course logo">
        </div>
        <h1 class="classroom-text col-md-10 col-xs-10 col-sm-10">
          {{course.title}}
        </h1>
      </div>

      <h2 class="classroom-para">
        {{course.subtitle}}
      </h2>

      <br>
      
      <div class="para">
        <span class="key">Mentor : </span>
        {{#each course.instructors as |instructor index|}}
             {{instructor.name}}{{if (lt index (sub course.instructors.length 1)) ", " " "}}
          {{/each}}
      </div>

      {{!-- <div class="button-solid">
        <button>BUY NOW TO ENROLL</button>
      </div> --}}

      <div class="heading-u">
        Summary
      </div>

      <div class="para summary">
        {{markdown-to-html course.summary}}
      </div>
    </div>
  </div>

  {{#if getRatingStats.isRunning}}
  {{else}}
    <div class="heading-u">
      Student Feedback
    </div>


    <div class="row c-rating-stats no-gutters">
      <div class="col-1 score">
        <span class="font-lg bold">{{course.rating}}</span><span class="bold">out of 5</span>

        {{rating-stars-static rating=course.rating}}

        <div>
          {{course.reviewCount}} Ratings
        </div>
      </div>
      <div class="col-7 col-sm-9 col-md-7 col-lg-5 stats">
        {{#each (range 5 0) as |index|}}
          <div class="row">
            <div class="col-12 col-sm-9">
              <progress value="{{get stats (sub index 1)}}" max="{{course.reviewCount}}"></progress>
            </div>
            <div class="col-3 rating">
              {{#each (range 0 index)}}
                <span class="pos-rating">
                  <i class="fas fa-star"></i>
                </span>
              {{/each}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <div class="row rating-carousel">
      {{#each course.ratingCarousel as |rating|}}
        {{#if rating.shown}}
          <div class="col-8 col-md-4 col-lg-3">
            <div class="card round c-rating-card">
              <div class="row justify-content-between">
                <div>{{rating.user.firstname}} {{rating.user.lastname}}</div>
                <div class="grey font-sm i">{{moment-from rating.updatedAt}}</div>
              </div>

              <div class="heading">
                {{rating.heading}}
              </div>

              {{rating-stars-static rating=rating.value}}

              <div class="review grey i">
                {{rating.review}}
              </div>
            </div>
          </div>
        {{/if}}
        
      {{/each}}
    </div>
  {{/if}}
</div>

{{!-- Buy right --}}

