{{!-- Accordian --}}

<div class="c-about-accordian">
  <div class="custom-heading accordian-head">
    <div class="heading-u">
      What will you learn
    </div>

    <div class="flex-row">
      <div class="lecture-count">
        {{course.topRun.totalContents}} Lectures
      </div>
      {{!-- <div class="duration">
        54 Hours
      </div> --}}
    </div>
  </div>

  <div class="c-accordian">
    {{log course.topRun}}
    {{#each course.topRun.sections as |section|}}
      <div class="accordian-ul" data-show="true">
        {{#accordian-head title=section.name total=section.totalContents}}

        {{#each section.contents as |content|}}
          <div class="accordian-li">
            <div class="li-left flex-row">
              <div class="accordian-li-type">
                <div class="content-icon {{content.iconClass}}-green"></div>
              </div>
              <div class="accordian-li-heading">
                {{content.payload.name}}
              </div>
            </div>

            <div class="flex-row">
            </div>
          </div>
        {{/each}}

        {{/accordian-head}}
      </div>
    {{/each}}
  </div>
</div>

{{!-- Instructor --}}

<div class="c-instructor">
  <div class="heading-u">
    About Instructors
  </div>

  <div class="c-about-instructors" >
    <div class="row no-gutters">
      {{#each course.instructors as |instructor|}}
        <div class="col-md-6 col-sm-12">
          <div class="img-desc row no-gutters">
            <div class="col-3">
              <div class="img-container">
                <div class="round-img">
                  <img src="{{instructor.photo}}" alt="photo of {{instructor.name}}">
                </div>
              </div>

            </div>


            <div class="description col-8">
              <div class="heading-d">
                <div class="main-h">
                  {{instructor.name}}
                </div>
                <div class="sub-h">
                  Mentor, Coding Blocks
                </div>
              </div>

              <div class="classroom-para">
                {{markdown-to-html instructor.description}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}

    </div>
  </div>
</div>

{{!-- Available Batches --}}

<div class="c-batches">
<div class="heading-u" id="runs">
  Choose from Available Batches
</div>

<div class="grid row">
    {{#each availableRuns as |run|}}
	<div class="card-layout col-md-4 col-sm-6">
		<div class="card c-run-card c-layout-card ">
			<div class="card-heading c-text-card">
          {{run.description}}
        </div>
        <div class="row">
          {{!-- <div class="card-text">
            {{run.description}}
          </div> --}}
          <div class="batch">
            <div class="card-text grey">
              Batch Starts
            </div>
            <div class="card-text">
              {{moment-format (unix run.start) 'MMM Do YYYY'}}
            </div>
          </div>

          <div class="divider-v"></div>

          <div class="batch">
            <div class="card-text grey">
              Batch Ends
            </div>
            <div class="card-text">
              {{moment-format (unix run.end) 'MMM Do YYYY'}}
            </div>
          </div>
        </div>

        <div class="price">
          {{format-price run.price}}

          {{#unless (eq run.mrp run.price)}}
            <span class="grey">
              &nbsp;&nbsp;<strike style="font-size: 0.9rem">{{format-price run.mrp}}</strike>
            </span>
          {{/unless}}
        </div>

        <div class="my-course-enroll row no-gutters">
          <div class="col-8 align-self-end">
            <div>HURRY UP!</div>
            <div class="red">Enrollment ends {{moment-format (unix run.enrollmentEnd) 'MMM Do YYYY'}} </div>
        </div>	
				<div class="button-parent col-4">
                                    <a href="#" {{action (perform enrollNowTask run.id)}}>
                                        <div class="button-solid">
                                            <button>
                                              {{if enrollNowTask.isRunning 'Enrolling...' 'Enroll Now'}}
                                              
                                            </button>
                                        </div>
                                    </a>
				</div>

			</div>

			<div class="card-mentor-divider"></div>
      {{#if run.tags.length}}
        <div class="font-sm">Major topics covered</div>
        <div class="tag-container">
          {{#each run.tags as |tag|}}
            <div class={{if (gt run.tags.length 6) "pill-sm" "pill"}}>
              {{tag.name}}
            </div>
          {{/each}}
        </div>

        <div class="card-mentor-divider"></div>
      {{/if}}
      
			<div class="row no-gutters">
				<div class="col-8 align-self-center">
					You may also try our
					free lectures:
				</div>
				<div class="button-parent col-4">
					<div class="button-dashed">
              {{#if session.isAuthenticated}}
                {{#link-to "classroom.timeline.index" course.id run.id tagName="button" activeClass=""}}
                  Start Free Trial
                {{/link-to}}
              {{else}}
                <button {{action 'logInAndStartTrial' course.id run.id}}>
                  Start Free Trial
                </button>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div> 
  {{else}}
    No available runs right now ! Please check back later or drop a line at admissions.codingblocks.com.
  {{/each}}
</div>
</div>
