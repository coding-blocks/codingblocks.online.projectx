        </div>

      <div class="button-dashed col-5 p-0">
          {{#if session.isAuthenticated}}
              {{#link-to "classroom.timeline.index" course.id course.topRun.id tagName="button"}}
                  START FREE TRIAL
              {{/link-to}}
          {{else}}
              <button onclick={{action 'logIn'}}>
                  START FREE TRIAL
