<div class="border-card b-orange">
  <h3 class="bold mb-3">Hacker Blocks Report</h3>
  <div class="font-normal">Improve your coding skills</div>
  <div class="divider-h my-4"></div>
  <WAsync
    @task={{fetchHackerblocksStats}}
    @autoFire="true" as |stats|>
    <div class="font-normal">Current Rank</div>
    <div class="row no-gutters justify-content-between align-items-center mt-2">
      <span class="font-md bold">{{stats.currentOverallRank}}</span>
      {{#if (gte stats.currentOverallRank stats.previousOverallRank)}}
        <span class="green">
          <FaIcon @icon="caret-up" />
          <span class="ml-1">{{sub stats.currentOverallRank stats.previousOverallRank}} ranks</span>
        </span>
      {{else}}
        <span class="salmon">
          <FaIcon @icon="caret-down" />
          <span class="ml-1">{{sub stats.previousOverallRank stats.currentOverallRank}} ranks</span>
        </span>
      {{/if}}
    </div>
    <div class="font-normal mt-4 pt-2">Performance</div>
    <div class="row no-gutters justify-content-between align-items-center mt-2">
      <span class="font-md bold">{{stats.currentMonthScore}} Points</span>
      {{#if (gte stats.currentMonthScore stats.previousMonthScore)}}
        <span class="green">
          <FaIcon @icon="caret-up" />
          <span class="ml-1">{{sub stats.currentMonthScore stats.previousMonthScore}} points</span>
        </span>
      {{else}}
        <span class="salmon">
          <FaIcon @icon="caret-down" />
          <span class="ml-1">{{sub stats.previousMonthScore stats.currentMonthScore}} points</span>
        </span>
      {{/if}}
    </div>
  </WAsync>
  <div class="mt-4">
    <a href="https://hack.codingblocks.com/app" target="_blank" class="button-solid button-orange">Continue</a>
  </div>
</div>
