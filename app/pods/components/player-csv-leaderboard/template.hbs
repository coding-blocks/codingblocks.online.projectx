<h4 class="pb-4 pt-4">Leaderboard</h4>

<div class="border-card">
  <table class="w-100">
    <thead class="font-sm red extra-bold">
      <td class="pb-4">Rank</td>
      <td class="pb-4">Name</td>
      <td class="pb-4">Score</td>
      <td class="pb-4">Timestamp</td>
    </thead>
    <tbody>
      {{#each lb as |lb index|}}
      <tr class="">
        <td class="pb-4 pt-2">{{inc index}}</td>
        <td class="pb-4 pt-2">
          <div class="img-desc align-items-center">
            <img class="round s-30x30" src="{{defaultPhoto lb.photo}}" alt="">
            <div class="description ml-3">
              {{concat lb.firstname ' ' lb.lastname}}
            </div>
          </div>
        </td>
        <td class="pb-4 pt-2">
          {{lb.score}}
        </td>
        <td class="pb-4 pt-2">{{lb.createdAt}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>