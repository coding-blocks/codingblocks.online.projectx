<div class="c-otp-enroll row align-items-center m-0">
  <div class="col-12 col-md-6 flex-row justify-content-center justify-content-md-start">
    <div>
      <p class="text-center text-lg-left">ENROLL TO COURSES VIA OTP</p>
      <p class="red text-center text-lg-left">
        {{#if otpSent}}
          We have sent an OTP to your registered Email
        {{else if errorString}}
          {{errorString}}
        {{/if}}
      </p>
    </div>
  </div>
  <div class="col-12 col-md-6">
    <div class="row justify-content-center justify-content-lg-end">
      <div class="col-12 col-md-9 col-lg-8 d-flex justify-content-center justify-content-md-end p-1">
        <div class="input-search">
          {{input type="text" placeholder=placeholderText value=userInput}}
        </div>
      </div>
      <div class="col-12 col-md-3 col-lg-2 d-flex justify-content-center justify-content-md-start p-1">
        <button class="button-solid" {{action 'handleClick'}}>{{buttonText}}</button>
      </div>
    </div>
  </div>
</div>