<div class="c-announcement">
    <div class="heading-u">
		Announcements ({{announcements.length}})
    </div>
  {{#unless announcements.length}}
    <div class="accordian-ul" data-show="true">
        <div class="accordian-li">
          <div class="classroom-para">
            All announcements related to course will be shared here !
          </div>
        </div>
    </div>
  {{/unless}}
	{{#each announcements as |announcement|}}
		<div class="accordian-ul" data-show="true">
			{{#accordian-head announcement=announcement course=course}}
			<div class="accordian-li">
				<div class="classroom-para">
					{{markdown-to-html announcement.text}}
				</div>
			</div>
			{{/accordian-head}}
		</div>
	{{/each}}

        <div id="an-load-more" class="button-dashed {{if (and visible announcements) '' 'display-none'}}">
        <button onclick={{action 'updatePage'}}>Load More</button>
    </div>
</div>
